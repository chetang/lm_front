<h1> All Wants </h1>
<table class="table table-striped table-bordered">
	<tr>
		<th>Id</th>
		<th>Account</th>
		<th>Budget</th>
		<th>Title</th>
		<th>Max. Wanted</th>
		<th>State</th>
		<th>Created At</th>
		<th>Updated At</th>
	</tr>
	{{#each user in content}}
		<tr>
			<td>{{user.id}}</td>
			<td>{{#linkTo 'account' user.account}}{{user.account.name}}{{/linkTo}}</td>
			<td>{{user.budget}}</td>
			<td>{{#linkTo 'want' user}}{{user.title}}{{/linkTo}}</td>
			<td>{{user.max_wanted}}</td>
			<td>{{user.state}}</td>
			<td>{{user.created_at}}</td>
			<td>{{user.updated_at}}</td>
		</tr>
	{{/each}}
</table>