<div class="row-fluid" style='float:left;width:50%;'>
  <div class="span3 pull-left" style="display:none;">
    {{view.propNameUnderscored}} :
  </div>
  <div class="span3 pull-left" style="text-align:right;width: 23%;float: left;word-wrap: break-word;margin-left:0;">
    {{sliceAttr 'view' 'propName'}} :
  </div>
  <input type='hidden' {{bindAttr value=view.lowerBound}}>
  <input type='hidden' {{bindAttr value=view.upperBound}}>
  <div class="span9 pull-right" style='width:74%;'>
  	<div class="row-fluid">
  		<div class="span8">
        <div class="slider_input_tag" {{bindAttr id=view.propNameModified}}></div>
      </div>
  	</div>
    <div class="row-fluid">
    {{#if view.showDropDown}}
      <div class="span4" style="margin-left:0;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.Select class="item_filter from input-medium slider_from" contentBinding=view.modifiedAllowedValues optionValuePath=content.value optionLabelPath=content.label selectionBinding=view.modifiedAllowedValuesMinSelection}}
          </div>
        </div>
      </div>
      <div class="span4" style="margin-right:48px;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.Select class="item_filter to input-medium slider_to" contentBinding=view.modifiedAllowedValues selectionBinding=view.modifiedAllowedValuesMaxSelection optionValuePath=content.value optionLabelPath=content.label}}
          </div>
        </div>
      </div>
    {{else}}
      <div class="span4" style="margin-left:0;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.TextField type="text" style="width:136px;" valueBinding=view.min class="item_filter from input-medium slider_from"}}
          </div>
        </div>
      </div>
      <div class="span4" style="margin-right:48px;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.TextField type="text" style="width:136px;" valueBinding=view.max class="item_filter to input-medium slider_to" style="float:left;"}}
          </div>
        </div>
      </div>

    {{/if}}
    </div>
  </div>
</div>