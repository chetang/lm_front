<div class="row-fluid">
  <div class="span3 pull-left" style="text-align:right">
    {{view.propName}}
  </div>
  <input type='hidden' {{bindAttr value=view.lowerBound}}>
  <input type='hidden' {{bindAttr value=view.upperBound}}>
  <div class="span9 pull-right">
  	<div class="row-fluid">
  		<div class="span4">
        <div class="slider_input_tag" {{bindAttr id=view.propNameModified}}></div>
      </div>
  	</div>
    <div class="row-fluid">
    {{#if view.showDropDown}}
      <div class="span3" style="margin-left:0;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.Select class="col-xs-2 item_filter from input-sm" contentBinding=view.allowedValues valueBinding=view.min}}
          </div>
        </div>
      </div>
      <div class="span3" style="margin-right:48px;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.Select class="col-xs-2 item_filter to input-sm" contentBinding=view.allowedValues valueBinding=view.max}}
          </div>
        </div>
      </div>
    {{else}}
      <div class="span3" style="margin-left:0;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.TextField type="text" valueBinding=view.min class="col-xs-2 item_filter from input-sm"}}
          </div>
        </div>
      </div>
      <div class="span3" style="margin-right:48px;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.TextField type="text" valueBinding=view.max class="col-xs-2 item_filter to input-sm" style="float:left;"}}
          </div>
        </div>
      </div>

    {{/if}}
    </div>
  </div>
</div>