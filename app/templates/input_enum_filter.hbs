<div class="row-fluid" style='float:left;width:50%;min-height:61px;'>
  <div style="display:none;">
    {{view.propNameUnderscored}}
  </div>
  <div class="pull-left" style="text-align:right;width: 15%;float: left;word-wrap: break-word;margin-left:0;">
    {{sliceAttr 'view' 'propName'}} :
  </div>
  <input type='hidden' {{bindAttr value=view.lowerBound}}>
  <input type='hidden' {{bindAttr value=view.upperBound}}>
  <input type='hidden' {{bindAttr value=view.floatPrecision}}>
  <div class="pull-right" style='width:85%;margin-left:0;'>
  	<div class="row-fluid" style='padding-left:6%;padding-bottom:10px;'>
  		<div style='width:86%;'>
        <div class="slider_input_tag" {{bindAttr id=view.propNameModified}}></div>
      </div>
  	</div>
    <div class="row-fluid" style='padding-left:5%;'>
    {{#if view.showDropDown}}
      <div style="margin-left:0;width:45%;float:left;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.Select class="item_filter from input-medium slider_from" contentBinding=view.modifiedAllowedValues optionValuePath=content.value optionLabelPath=content.label selectionBinding=view.modifiedAllowedValuesMinSelection}}
          </div>
        </div>
      </div>
      <div style="margin-left:10%;width:45%;float:left">
        <div class="control-group">
          <div class="controls">
            {{view Ember.Select class="item_filter to input-medium slider_to" contentBinding=view.modifiedAllowedValues selectionBinding=view.modifiedAllowedValuesMaxSelection optionValuePath=content.value optionLabelPath=content.label}}
          </div>
        </div>
      </div>
    {{else}}
      <div style="margin-left:0;width:45%;float:left;">
        <div class="control-group">
          <div class="controls">
            {{view Ember.TextField type="text" valueBinding=view.min class="item_filter from input-medium slider_from"}}
          </div>
        </div>
      </div>
      <div style="margin-left:10%;width:45%;float:left">
        <div class="control-group">
          <div class="controls">
            {{view Ember.TextField type="text" valueBinding=view.max class="item_filter to input-medium slider_to" style="float:left;"}}
          </div>
        </div>
      </div>
    {{/if}}
    </div>
  </div>
</div>